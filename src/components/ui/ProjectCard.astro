---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<a
  href={link}
  class="flex flex-row gap-4 sm:gap-16 justify-between p-3 -m-3 rounded-md hover:bg-project-gray-100 transition-all duration-100"
>
  <span class="w-full">
    <h3>{title}</h3>
    <span class="text-project-gray-500">{description}</span>
  </span>
  <p class="w-6 h-fit aspect-square flex justify-center items-center">
    <Icon name="prime:arrow-up-right" class={"w-4 h-4 text-project-gray-950"} />
  </p>
</a>
